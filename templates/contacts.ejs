<% layout('layout/page');
block('barContacts', 'active');
block("title" , "Контакти");
block('JS1', 'src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBZpqEvuDsbdxFwcWw6C8ZMsbAoxZclGLk&callback=initMap" async defer');
block("JS2" , 'src="/js/gmaps.min.js"');%>

<div class="row main">

    <div class="col-md-9 left">
        <div class="row">
            <div class="adm <% if(role != "admin") {%> hidden <% } %>">
                <form class="btn-group" role="form">
                    <button type="button" class="btn btn-default btn-xs editContacts-btn" title="Редагувати">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="contacts">
                <%-contacts[0].contacts%>
            </div>
            <form>
                <div class="editContacts form-group hidden">
                    <h3>Редагувати контакти</h3>
                    <div class="summernote form-control">
                        <%-contacts[0].contacts%>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-default contacts-btn">Підтвердити</button>
                    </div>
                </div>
            </form>
        </div>
        <div id="map"></div>
        <script>
            var map = new GMaps({
                el: '#map',
                lat: 49.808444,
                lng: 23.983528
            });
            map.addMarker({
                lat: 49.808444,
                lng: 23.983528,
                title: 'Клуб гармонійного розвитку дитини - "Петрик"',
                infoWindow: {
                    content: '<p>Клуб гармонійного розвитку дитини - "Петрик"</p>'
                }
            });
        </script>
    </div>
    <% include layout/login %>
</div>


