<% layout('layout/page');
    block('barNews', 'active');
    block("title" , "Новини") %>

<div class="row main">
    <div class="left col-md-9  news">
        <div class="btn-group adm <% if(role != "admin") {%> hidden <% } %>">
            <form class="btn-group" method="post">
                <button type="submit" class="btn btn-default btn-xs" formaction="/news/<%- news[0].id%>/edit" formmethod="get" title="Редагувати">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button type="submit" class="btn btn-default btn-xs" name="del" title="Видалити" aria-label="remove">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </form>
        </div>

        <h3> <%- news[0].title %> </h3>
        <div class="time">
            <p>Додано <%- news[0].time.slice(0,10) %> о <%- news[0].time.slice(12,16) %></p>
        </div>
        <p> <%- news[0].news %> </p>
    </div>
    <% include layout/login %>
</div>