<% layout('layout/page');
    block('barNews', 'active');
    block("title" , "Новини") %>
<div class="row main">
    <div class="left col-md-9">
        <div class="row">
            <div class="adm <% if(role != "admin") {%> hidden <% } %>">
                <form action="/add" method="get">
                    <button type="submit" class="btn btn-default btn-xs" title="Додати новину">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </form>
            </div>
        </div>
        <% for(var i = news.length - 1; news[i] != undefined; i--) { %>
        <div class="row">
            <div class = "col-md-12 news">
                <div class="adm <% if(role != "admin") {%> hidden <% } %>">
                    <form class="btn-group" role="form" action="/news/<%- news[i].id%>" method="post">
                        <button type="submit" class="btn btn-default btn-xs" formaction="/news/<%- news[i].id%>/edit" formmethod="get" title="Редагувати">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button type="submit" class="btn btn-default btn-xs" name="del" title="Видалити">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                    </form>
                </div>
                <a href="/news/<%- news[i].id%>">
                    <h3> <%- news[i].title %> </h3>
                    <div class="time">
                        <p>Додано <%- news[i].time.slice(0,10) %> о <%- news[i].time.slice(12,16) %></p>
                    </div>
                    <p> <%-news[i].descrip%> </p>
                </a>
            </div>
        </div>
        <% } %>
    </div>
    <% include layout/login %>
</div>