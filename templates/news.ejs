<% layout('layout/page') -%>
<% block('barNews', 'active') -%>

<div class="row main">
    <div class="left col-md-9">
        <div class="adm">
            <% if(role == "admin") {%>
                <form action="/add" method="get">
                    <button type="submit" class="btn btn-default btn-xs" title="Додати новину">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </form>
            <% } %>
        </div>
        <% for(var i = news.length - 1; news[i] != undefined; i--) { %>
            <div class = "news">
                <div class="adm">
                    <% if(role == "admin") {%>
                        <form class="btn-group" role="form" action="/news/<%- news[i].id%>" method="post">
                            <button type="submit" class="btn btn-default btn-xs" formaction="/news/<%- news[i].id%>/edit" formmethod="get" title="Редагувати">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                            <button type="submit" class="btn btn-default btn-xs" name="del" title="Видалити">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </form>
                    <% } %>
                </div>
                <h3> <a href="/news/<%- news[i].id%>"> <%- news[i].title %> </a> </h3>
                <p> <%-news[i].descrip%> </p>
            </div>
        <% } %>
    </div>
