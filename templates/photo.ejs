<% layout('layout/page');
block('barPhotos', 'active');
block("title" , "Фотогалерея") %>

<div class="row main">
    <div class="col-md-9 left">
        <div class="row">
            <div class="adm <% if(role != "admin") {%> hidden <% } %>">
                <form class="btn-group" role="form" action="/albums/<%- photos[0].id%>" method="post">
                    <button type="button" class="btn btn-default btn-xs editPhotos-btn" title="Редагувати">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="submit" class="btn btn-default btn-xs" name="del" title="Видалити">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </form>
            </div>
        </div>
        <div class="row photoRow news">
            <div class="photos">
                <%-photos[0].photos%>
            </div>
            <form>
                <div class="editPhotos form-group hidden">
                    <h3>Редагувати альбом</h3>
                    <div class="summernote form-control">
                        <%-photos[0].photos%>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-default conf-btn">Підтвердити</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <% include layout/login %>
</div>

