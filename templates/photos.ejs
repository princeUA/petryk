<% layout('layout/page');
    block('barPhotos', 'active');
    block("title" , "Фотогалерея") %>

<div class="row main">
    <div class="left col-md-9">
        <div class="row">
            <div class="adm <% if(role != "admin") {%> hidden <% } %>">
                <form action="/addalbum" method="get">
                    <button type="submit" class="btn btn-default btn-xs" title="Додати альбом">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </button>
                </form>
            </div>
        </div>
        <% var j = 0;
        for(var i = albums.length - 1; albums[i] != undefined; i--) {
        if(j%3 == 0) {%>
        <div class="row photoRow">
        <% } %>
            <div class="col-md-4">
                <div class="albums">
                    <a href="/news/<%- albums[i].id%>">
                        <%- albums[i].photo%>
                        <%- albums[i].title %>
                    </a>
                </div>
            </div>
        <% if(j%3 == 2) { %>
        </div>
        <% } j++
        if(albums[i-1] == undefined){ %>
        </div>
        <% } %>
        <% }%>


    </div>
    <% include layout/login %>
</div>