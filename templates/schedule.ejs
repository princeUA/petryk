<% layout('layout/page');
block('barSchedule', 'active');
block("title" , "Розклад");%>

<div class="row main">
    <div class="col-md-9 left">
        <div class="row">
            <div class="adm <% if(role != "admin") {%> hidden <% } %>">
                <form class="btn-group" role="form">
                    <button type="button" class="btn btn-default btn-xs editContacts-btn" title="Редагувати">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="schedule">
                <%-schedule[0].schedule%>
            </div>
            <form>
                <div class="editContacts form-group hidden">
                    <h3>Редагувати розклад</h3>
                    <div class="summernote form-control">
                        <%-schedule[0].schedule%>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-default schedule-btn">Підтвердити</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <% include layout/login %>
</div>


