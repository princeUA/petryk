<% layout("layout/page");
    block("barUsers", "active");
    block("title" , "Користувачі") %>

<div class="row main">
    <p><%- user[0].login %></p>
    <img class="img-responsive img-rounded userImg" src="<%- user[0].image%>">
    <p>Ім'я: <%- user[0].name %></p>
    <p>Пошта: <%- user[0].mail %></p>
    <!--Role changing -->
    <form class="form-inline" method="post" action="/users/<%- user[0].id %>">
        <div class="form-group">
            <label class="control-label" for="role">Статус:</label>
            <select class="form-control input-sm" id="role" name="role">
                <option value="<%- user[0].role %>"><%- user[0].role %></option>
                <option value="<%- (user[0].role == "user") ? "admin" : "user" %>"><%- (user[0].role == "user") ? "admin" : "user" %></option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-default" name="confRole">Підтвердити</button>
        </div>
    </form>
</div>