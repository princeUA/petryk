<%layout('layout/page') -%>
<%block('barUsers', 'active') -%>

<div class="row main">
    <table class="table table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Ім'я</th>
                <th>Пошта</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; users[i] != undefined; i++){ %>

                <tr>
                    <a href="user/<%users[i].id%>">
                    <td><%- i+1 %></td>
                    <td><%- users[i].name %></td>
                    <td><%- users[i].mail %></td>
                    <td><%- users[i].role %></td>
                    </a>
                </tr>

            <% } %>
        </tbody>
    </table>
</div>